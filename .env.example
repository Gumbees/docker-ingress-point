# ===================================================================
# Docker Ingress Point Environment Configuration
# ===================================================================
# This file contains environment variables for docker-compose.yml
# Copy this file to .env and customize as needed for your environment

# ===================================================================
# BASIC CONFIGURATION
# ===================================================================

# Container naming prefix (used for all containers and volumes)
CONTAINER_NAME_PREFIX=ingress

# Timezone for all containers
TZ=America/New_York

# Configuration base path (where volumes will be mounted)
CONFIG_BASE=/opt/docker-ingress

# ===================================================================
# TRAEFIK CONFIGURATION
# ===================================================================

# Traefik port configuration
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080

# Traefik dashboard configuration
TRAEFIK_DASHBOARD_HOST=traefik.localhost
TRAEFIK_DASHBOARD_TLS=false
TRAEFIK_INSECURE_API=true

# Traefik logging
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_ACCESS_LOG=false

# ===================================================================
# ZEROTIER CONFIGURATION
# ===================================================================

# Enable/disable ZeroTier (1 to enable, 0 to disable)
ENABLE_ZEROTIER=1

# ZeroTier network configuration
ZEROTIER_LOCAL_PHYS=eth0
ZEROTIER_USE_NFT=0
ZEROTIER_PORT=9993

# ===================================================================
# NETWORK CONFIGURATION
# ===================================================================

# Container internet network settings
CONTAINER_INTERNET_NETWORK=container_internet
CONTAINER_INTERNET_EXTERNAL=false
CONTAINER_INTERNET_SUBNET=172.20.0.0/16

# ===================================================================
# VOLUME CONFIGURATION
# ===================================================================

# Volume driver configuration (leave empty for default local driver)
CONFIG_VOLUME_TYPE=
CONFIG_VOLUME_OPTIONS=

# Alternative volume configurations (examples):
# For bind mounts:
# CONFIG_VOLUME_TYPE=none
# CONFIG_VOLUME_OPTIONS=bind

# For NFS mounts:
# CONFIG_VOLUME_TYPE=nfs
# CONFIG_VOLUME_OPTIONS=addr=192.168.1.100,rw,nfsvers=4 